                <h1>لیست نقش های کاربری </h1>
                <div>
                    @Html.ActionLink("ثبت نقش کاربری جدید", "Create", null, new { @class = "btn-color btn btn-success" })
                </div>
            </div>
            <div class="margin-r-20">
                <div class="table-col">
                    ردیف
                </div>
                <div class="table-col__div-long">
                    @Html.DisplayNameFor(model => model.RoleName)
                </div>
                <div class="table-col__div-long">
                    @Html.DisplayNameFor(model => model.RoleTitle)
                </div>
                <div class="table-col__div-last">
                    عملیات
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="table-row margin-r-20">
                    <div class="table-col">
                        @count
                    </div>
                    <div class="table-col__div-long">
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </div>
                    <div class="table-col__div-long">
                        @Html.DisplayFor(modelItem => item.RoleTitle)
                    </div>
                    <div class="table-col__div-last">
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.RoleId }, new { @class = "btn btn-danger" }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.RoleId }, new { @class = "btn btn-warning" })
                    </div>
                </div>
                count++;
            }
        </div>









